<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Other_Img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ai_img3"

            />
         <com.app.aitalkdemo.MyViewDragHelper
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="15dp"
             >
        <TextView
            android:id="@+id/Other_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:background="@drawable/talk_img1"

             />
             <Button
                 android:gravity="center_vertical"
                 android:layout_width="50dp"
                 android:id="@+id/Other_Btn"
                 android:layout_height="match_parent"
                 android:background="@color/colorAccent"
                 android:text=":D"
                 android:visibility="gone"
                 android:textSize="25dp"
                 />
         </com.app.aitalkdemo.MyViewDragHelper>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"

        >
       <com.app.aitalkdemo.MyViewDragHelper
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="15dp"
           android:orientation="horizontal"
           >
        <TextView
            android:id="@+id/This_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:background="@drawable/talk_img2" />
        <Button
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:rotation="180"
            android:id="@+id/This_Btn"
            android:text=":D"
            android:textSize="25dp"
            />
       </com.app.aitalkdemo.MyViewDragHelper>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/This_Img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/dog_img1" />

    </LinearLayout>


</LinearLayout>